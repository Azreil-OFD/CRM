{
    "$schema": "https://turbo.build/schema.json",
    "ui": "tui",
    "tasks": {
        "db:up": {
            "cache": false
        },
        "db:down": {
            "cache": false
        },
        "dev": {
            "dependsOn": [
                "db:up"
            ],
            "cache": false,
            "persistent": true
        },
        "build": {
            "dependsOn": [
                "^build"
            ],
            "outputs": [
                "dist/**",
                ".nuxt/**"
            ]
        }
    }
}